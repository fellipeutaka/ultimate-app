{
  "name": "@ultimate/server",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --no-file-parallelism",
    "test:e2e": "vitest run --config ./test/vitest.config.e2e.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.3",
    "@nestjs/core": "^10.3.3",
    "@nestjs/platform-fastify": "^10.3.3",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.3",
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.2",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "@ultimate/eslint-config": "workspace:*",
    "@ultimate/tsconfig": "workspace:*",
    "@vitest/coverage-v8": "^1.3.1",
    "supertest": "^6.3.4",
    "unplugin-swc": "^1.4.4",
    "vitest": "^1.3.1"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@ultimate/eslint-config/node"
    ]
  }
}
